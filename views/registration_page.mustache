<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Notes</title>
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="/css/grid.css">
		<link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
	</head>
	<body>
		<div class="background_body"></div>
		<div class="content_body">
			<div id="main">
				<div class="container" id="header">
					<div class="col_12">
						<div class="logo">
							<b>My Notes</b>
						</div>
					</div>
				</div>
				<div class="container">
					<!-- Окно регистрации -->
					<div class="signup_header">
						<div class="signup_title">
							<h1>Sign Up</h1>
						</div>
					</div>
					<div class='signup_box'>
						<form method='post' class='reg_form' action="/signup">
							<section class='form_row'>
								<label for='first_name'>First Name: </label>
								<input id='form_fname' name='first_name' required>
							</section>
							<section class='form_row'>
								<label for='last_name'>Last Name: </label>
								<input id='form_sname' name='last_name'>
							</section>
							<section class='form_row'>
								<label for='form_email'>E-mail: </label>
								<input type='email' id='form_email' name='email' required>
							</section>
							<section class='form_row'>
								<label for="password">Password</label>
								<input type="password" id="password" name="password" required>
							</section>
							<section class='form_row'>
								<label for="confirm_password">Confirm password</label>
								<input type="password" id="confirm_password" name="confirm_password" required>
							</section>
							<section class="form_row">
								<button type="submit"><a>Sign Up</a></button>
							</section>
							<div class="message" id="message_signup">Already registered? <a href="/login">Log In</a></div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>