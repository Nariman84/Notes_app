<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Notes</title>
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="/css/grid.css">
		<link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
	</head>
	<body>
		<div class="bg"></div>
		<div id="content_body">
			<div id="main">
				<div class="container" id="header">
					<div class="col-12" id="logged-in-username">
						<div class="col-6" id="logo">
							<div id="my_logo">
								<b>My Notes</b>
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<!-- Выбор: авторизация или регистрация -->
					<div id="signupOrAuthor">
						<div id="regbar">
							<div id="signup_bar">
								<h1>Sign Up</h1>
							</div>
						</div>
					</div>
					<!-- Окно регистрации -->
					<div class='box-1'>
						<div class="registr">
							<!-- Sign Up -->
							<form method='post' class='reg-form' action="/signup">
								<section class='form-row'>
									<label for='name'>First Name: </label>
									<input id='form_fname' name='firstName' required>
								</section>
								<section class='form-row'>
									<label for='lastname'>Last Name: </label>
									<input id='form_sname' name='lastName'>
								</section>
								<section class='form-row'>
									<label for='form_email'>E-mail: </label>
									<input type='email' id='form_email' name='email' required>
								</section>
								<section class='form-row'>
									<label for="password">Password</label>
									<input type="password" id="password" name="password" required>
								</section>
								<section class='form-row'>
									<label for="confirmPassword">Confirm password</label>
									<input type="password" id="confirmPassword" name="confirmPassword" required>
								</section>
								<section class="form-row" id="button">
									<button type="submit"><a>Sign Up</a></button>
								</section>
								<div class="message" id="message_signup">Already registered? <a href="/login">Log In</a></div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="../js/main.js"></script>
	</body>
</html>