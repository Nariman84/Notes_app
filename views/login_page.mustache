<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Notes</title>
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="/css/grid.css">
		<link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	</head>
	<body onload = "loadLoginPage()">
		<div class="background_body"></div>
		<div class="content_body">
			<div id="main">
				<div class="container" id="header">
					<div class="col_12">
						<div class="logo">
							<b>My Notes</b>
						</div>
					</div>
				</div>

				<!-- Окно авторизации-->
				<div class="container">
					<div class="login_header">
						<div class="login_title">
							<h1>Log In</h1>
						</div>
					</div>
					<div class='login_box'>
						<form method='post' class='login_form' id="login_form" action="/login">
							<section class='form_row'>
								<label for="form_email">E-mail: </label>
								<input type='email' id='form_email' name='email' required>
							</section>
							<section class='form_row'>
								<label for="password">Password </label>
								<input type="password" id="password" name="password" required>
							</section>
							<div id="err_auth">{{err_auth}}</div>
							<section class="form_row" id="button">
								<button id="submit_login" type="submit">Log In</button>
								<div class="message" id="message_login">Not registered? <a href="/signup">Create an account</a></div>
							</section>
						</form>
					</div>
				</div>
			</div>
		</div>
	
	<script src="../js/main.js"></script>
	<script>
		function loadLoginPage() {
			var loginBox = document.getElementsByClassName('login_box');
			var errAuth = document.getElementById('err_auth');
			console.log(errAuth.innerHTML);
			if (errAuth.innerHTML != "") {
				loginBox[0].style.height = "230px";
			}
		}
	</script>
	</body>
</html>